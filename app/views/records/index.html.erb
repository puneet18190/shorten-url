<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table border="1" class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Sorten url</th>
      <th>Count</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.url %></td>
        <% url = request.host_with_port + '/s/' + record.shorten_url %>
        <td><%= url %></td>
        <td><%= record.count %></td>
        <td><%= record.title %></td>
        <td><%= link_to 'Show', record, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_record_path(record), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path, class: 'btn btn-primary' %>
