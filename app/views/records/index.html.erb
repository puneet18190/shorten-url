<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table border="1">
  <thead>
    <tr>
      <th>Url</th>
      <th>Sorten url</th>
      <th>Count</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.url %></td>
        <% url = request.host_with_port + '/s/' + record.shorten_url %>
        <td><%= url %></td>
        <td><%= record.count %></td>
        <td><%= record.title %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

